<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style/dashboard.css">
    <%- include('./partials/bootstrap-link.ejs') %>
    <%- include('./partials/table-link.ejs') %>
    <%- include('./partials/head.ejs') %>
</head>
<body>

    <!-- dashboard -->
    <%- include('./partials/nav.ejs') %>
    
    <!-- reorder supplier PO -->
    <div class="container mb-3 mt-3">
        
        <div class="row mb-2">
            <div class="col-8 h3">
                    Reorder: Supplier PO
            </div>
        </div>
        
        <header class="text-center h3 bg-secondary">
            <br>
            Supplier PO Form
            <br>
            <br>
        </header>


    <!-- supplier PO form -->
        <div class="container mt-5">
            <form>
                <div class="form-info">

                    <div class="form-group row">
                        <label for="select_supplier" class="col-2 col-form-label font-weight-bold">Supplier:</label>
                        <select name="" id="select_supplier" class="col-2" autofocus>
                        <% for(var i = 0; i < SupplierList.length; i++) { %>
                            <option><%= SupplierList[i].Name %></option>
                        <% } %>
                        </select>
                        <a href="reorder-supplier-form" id="add_supplier_button" class="btn btn-secondary ml-3">Add Supplier</a>
                    </div>

                    <div class="form-group row">
                        <label for="supplier_po" class="col-2 col-form-label font-weight-bold">Supplier PO:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_po" value="<%= next_PO %>" readonly>
    
                        <label for="supplier_email" class="col-2 col-form-label font-weight-bold">Supplier Email:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_email" value="<%= SupplierList[0].Email %>" readonly>
                        
                        <label for="supplier_address" class="col-2 col-form-label font-weight-bold">Supplier Address:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_address" value="<%= SupplierList[0].Address %>" readonly>
    
                    </div>
    
                    <div class="form-group row">
                        <label for="supplier_name" class="col-2 col-form-label font-weight-bold">Supplier Name:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_name" value="<%= SupplierList[0].Name %>" readonly>

                        <label for="supplier_number" class="col-2 col-form-label font-weight-bold">Supplier Number:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_number" value="<%= SupplierList[0].Number %>" readonly>
                        
                        <label for="mode_of_payment" class="col-2 col-form-label font-weight-bold">Mode of Payment:</label>
                        <select name="mode_of_payment" id="mode_of_payment" class="col-2 form-control-file">
                            <option>Cash</option>
                            <option>Debit Card</option>
                            <option>Credit Card</option>
                            <option>Mobile Payment</option>
                        </select>
                    </div>
                </div>

                <table class="table table-bordered text-center mt-5" id="supplier_add_po_table">
                    <thead>
                        <tr>
                            <th scope="col">Product Name</th>
                            <th scope="col">Unit Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Amount</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <select class="form-control-file " id="product_name1">
                                <% for(var i = 0; i < SupplierList[0].Products.length; i++) { %>
                                   <option><%= SupplierList[0].Products[i] %></option>
                                <% } %>
                                </select>
                            </td>
                            <td>
                                <input type="number" class="form-control-file" id="unit_price1">
                            </td>
                            <td>
                                <input type="number" class="form-control-file" id="quantity1">
                            </td>
                            <td>
                                <input type="number" class="form-control-file" id="amount1">
                            </td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-secondary mr-2" id="add_item_button"><span class="fas fa-plus"></span></button>
                                    <button type="button" class="btn btn-secondary" id="delete_item_button" disabled><span class="fas fa-trash"></span></button>
                                </div>
                        </tr>
                    
                    </tbody>

                    <tfoot>
                        <tr>
                            <th colspan="3" class="h4 text-right">Total: </th>
                            <th colspan="2" class="h4"></th>
                        </tr>
                    </tfoot>
                </table>
            </form>
            <button type="button" class="btn btn-secondary float-right" id="submit_button">Submit</button>
        </div>        
    
    </div> 

    <script src="/script/reorder-supplier-po-form.js"></script>

</body>
</html>