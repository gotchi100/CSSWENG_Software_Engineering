<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style/dashboard.css">
    <%- include('./partials/bootstrap-link.ejs') %>
    <%- include('./partials/table-link.ejs') %>
    <%- include('./partials/head.ejs') %>
</head>
<body>

    <!-- dashboard -->
    <%- include('./partials/nav.ejs') %>
    
    <!-- reorder supplier PO -->
    <div class="container mb-3 mt-3">
        
        <div class="row mb-2">
            <div class="col-8 h3">
                    Reorder: Supplier PO
            </div>
        </div>
        
        <header class="text-center h3 bg-secondary">
            <br>
            Supplier PO Form
            <br>
            <br>
        </header>


    <!-- supplier PO form -->
        <div class="container mt-5">
            <form>
                <div class="form-info">

                    <div class="form-group row">
                        <label for="select_supplier" class="col-2 col-form-label font-weight-bold">Supplier:</label>
                        <select name="" id="select_supplier" class="col-2 form-control-file">
                            <option value=""></option>
                            <option value=""></option>
                        </select>
                        <a href="" id="add_supplier_button" class="btn btn-secondary ml-3">Add Supplier</a>
                    </div>

                    <div class="form-group row">
                        <label for="supplier_po" class="col-2 col-form-label font-weight-bold">Supplier-PO:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_po" >
    
                        <label for="supplier_email" class="col-2 col-form-label font-weight-bold">Supplier Email:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_email" >
    
                        <label for="supplier_address" class="col-2 col-form-label font-weight-bold">Supplier Address:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_address" >
                    </div>
    
                    <div class="form-group row">
                        <label for="supplier_name" class="col-2 col-form-label font-weight-bold">Supplier Name:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_name" >

                        <label for="supplier_number" class="col-2 col-form-label font-weight-bold">Supplier Number:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_number" >
                        
                        <label for="mode_of_payment" class="col-2 col-form-label font-weight-bold">Mode of Payment:</label>
                        <select name="" id="mode_of_payment" class="col-2 form-control-file">
                            <option value=""></option>
                            <option value=""></option>
                        </select>
                    </div>
                </div>

                <table class="table table-bordered mt-5">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                            <th>Amount</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <select class="custom-select">
                                    <option></option>
                                </select>

                            </td>
                            <td>
                                <input type="number" class="form-control" id="unit_price" readonly>
                            </td>
                            <td>
                                <input type="number" class="form-control" id="quantity">
                            </td>
                            <td>
                                <input type="number" class="form-control" id="amount" readonly>
                            </td>
                            <td><button type="button" class="btn btn-secondary form-control font-weight-bold" id="add_item_button">+</button></td>
                        </tr>
                    
                    </tbody>

                    <tfoot>
                        <tr>
                            <th colspan="3" class="h4 text-right">Total: </th>
                            <th colspan="2" class="h4"></th>
                        </tr>
                        
                    </tfoot>
                    


                </table>





            </form>
            <button type="button" class="btn btn-secondary float-right" id="add_item_button">Submit</button>
        </div>        
        
        
        
        






    
    </div> 

</body>
</html>