<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style/dashboard.css">
    <%- include('./partials/bootstrap-link.ejs') %>
    <%- include('./partials/table-link.ejs') %>
    <%- include('./partials/head.ejs') %>
</head>
<body>

    <!-- dashboard -->
    <%- include('./partials/nav.ejs') %>
    
    <!-- reorder add supplier -->
    <div class="container mb-3 mt-3">
        
        <div class="row mb-2">
            <div class="col-8 h3">
                    Reorder: Supplier PO
            </div>
        </div>
        
        <header class="text-center h3 bg-secondary">
            <br>
            Supplier PO Form
            <br>
            <br>
        </header>


    <!-- add supplier -->
        <div class="container mt-5">
            <form>
                <div class="form-info">

                    <div class="form-group row">
                        <label for="supplier_name" class="col-2 col-form-label font-weight-bold">Supplier Name:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_name" >
    
                        <label for="supplier_email" class="col-2 col-form-label font-weight-bold">Supplier Number:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_number" >

                        <label for="supplier_number" class="col-2 col-form-label font-weight-bold">Supplier Email:</label>
                        <input type="text" class="form-control-file col-2" id="supplier_email" >
                    </div>
    
                    <div class="form-group row">
                        <label for="supplier_address" class="col-2 col-form-label font-weight-bold">Supplier Address:</label>
                        <input type="text" class="form-control-file col-10" id="supplier_address" >
                    </div>
                </div>

                <header class="h4 bg-secondary text-center">
                    <br>
                    Product Name
                    <br>
                    <br>             
                </header>

                <table class="table table-borderless" id="supplier_add_supplier_table">
                    <tbody>
                        <tr>
                            <td style="width: 10%">
                                <p class="col-form-label font-weight-bold text-right mr-2" id="product_number1">1.</p>
                            </td>
                            <td style="width: 75%">
                                <input type="text" class="form-control-file" id="product_name1" >
                            </td>
                            <td style="width: 15%">
                                <div class="d-flex justify-content-start">
                                    <button type="button" class="btn btn-secondary ml-2 mr-2" id="add_item_button"><span class="fas fa-plus"></span></button>
                                    <button type="button" class="btn btn-secondary" id="delete_item_button" disabled><span class="fas fa-trash"></span></button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
            <button type="button" class="btn btn-secondary float-right m-2" id="submit_button">Submit</button>
            <button type="button" class="btn btn-secondary float-right m-2" id="clear_item_button">Clear</button>
            <a class="btn btn-secondary float-right m-2" href="reorder-supplier-po-form" role="button" id="back_button">Back</a>
        </div>        
        
    <!-- add supplier pop-up -->
     <div class="modal fade" id="delete_modal" role="dialog" tabindex="-1" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-dialog-centered modal-confirm">
            <div class="modal-content">

                <div class="modal-header">
                    <p class="h3">Are you sure?</p>
                </div>
                
                <div class="modal-body text-center">
                    
				<p class="h6" id="delete_modal_text">Are you sure you want to permanently remove the selected product/s?</p>
                        
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary float-right mr-3" data-dismiss="modal" id="cancel_delete_modal">Cancel</button>
                    <button type="button" class="btn btn-secondary float-right mr-3" id="delete_button">Delete</button>
                </div>
            </div>
        </div>
    </div>
        
    <!-- error pop-up -->
    <div class="modal fade" id="error_modal" role="dialog" tabindex="-1" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-dialog-centered modal-confirm">
            <div class="modal-content">

                <div class="modal-header">
                    <p class="h3">Error!</p>
                </div>
                
                <div class="modal-body text-center">
                    
				<p class="h6" id="error_modal_text"></p>
                        
                </div>

                <div class="modal-footer">
                    
                    <button type="button" class="btn btn-secondary float-right mr-3" data-dismiss="modal" id="close_error_modal">Close</button>
                </div>
            </div>
        </div>
    </div>
        






    
    </div> 

    <script src="/script/reorder-add-supplier.js"></script>
</body>
</html>