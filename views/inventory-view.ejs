<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style/dashboard.css">
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/bootstrap-link.ejs') %>
    <%- include('./partials/table-link.ejs') %>
</head>
<body>

    <!-- dashboard -->
    <%- include('./partials/nav.ejs') %>
    
    <!-- inventory view -->
    <div class="container mb-3 mt-3">
        
        <div class="row mb-2">
            <div class="col-8 h3">
                    Inventory: View Inventory
            </div>
        </div>
        
        <header class="text-center h3 bg-secondary">
            <br>
            Inventory
            <br>
            As of today: xx, xxxx, xxxx
            <br>
            <br>
        </header>
    
        
    <!-- data table -->
        <table class="table table-bordered text-center" id="inventory_view_table">

            <thead>
                <th></th>
                <th scope="col">Product ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Brand</th>
                <th scope="col">SRP</th>
                <th scope="col">QTY On Hand</th>
                <th scope="col">Reorder Point</th>
                <th scope="col">Availability</th>
            </thead>
            <tbody>

                <!-- Table placeholders -->
                <% for(var i = 0; i < ProductList.length; i++) { %>

                    <tr>
                        <td></td>
                        <td><%= ProductList[i].ProductId %></td>
                        <td><%= ProductList[i].ProductName %></td>
                        <td><%= ProductList[i].Brand %></td>
                        <td><%= ProductList[i].SellingPrice %></td>
                        <td><%= ProductList[i].Quantity %></td>
                        <td><%= ProductList[i].ReorderPoint %></td>
                        <% var Availability = ""; %>
                        <% if(ProductList[i].Quantity + 5 > ProductList[i].ReorderPoint) {Availability = "Medium"; %>
                        <% }else if(ProductList[i].Quantity + 10 > ProductList[i].ReorderPoint) {Availability = "High"; %>
                        <% }else if(ProductList[i].Quantity <= ProductList[i].ReorderPoint) {Availability = "Low";} %>
                        <td><%= Availability %></td>
                    </tr>
                <% } %>
                    
               
            </tbody>

        </table>

        <div class="container d-flex justify-content-end">
            <button type="button" class="btn btn-secondary m-2" id="delete_button" disabled>Delete</button>
            <button type="button" class="btn btn-secondary m-2" id="edit_modal_button" data-toggle="modal" data-target="#edit_modal" disabled>Edit</button>
          <button type="button" class="btn btn-secondary m-2" id="add_modal_button" data-toggle="modal" data-target="#add_modal">Add</button>
        </div>
        
    </div>

    <!-- inventory view product pop up -->
    <div class="modal fade" id="details_modal" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" id="close_details_modal">&times;</button>
                </div>
                <div class="modal-body bg-secondary">
                     
                    <div class="container mb-3 mt-3">

                        <div class="row">
                            <div class="col-5">
                                <img src="/images/placeholder.png" class="img-fluid">
                            </div>

                            <div class="col-7">

                                <div id="details_product_name" class="h3">Product Name: <span></span></div>
                                <br>
                                <p id="details_price" class="h3">Price: <span></span></p>
                                <br>
                                <p id="details_quantity" class="h3">Quantity: <span></span></p>
                                <br>
                                <p id="details_variations" class="h3">Variations: <span></span></p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- inventory view add product pop-up -->
    <div class="modal fade" id="add_modal" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">

                <div class="modal-header bg-secondary border-0"></div>
                
                <div class="modal-body bg-secondary">
                    <form action="" id="inventory-add-product-form" method="POST">
                        <table class="table table-bordered text-center bg-light" id="add_product_table">
                            <thead>
                                <tr>
                                    <th colspan="7" class="h2">Add Product</th>
                                </tr>
                                <tr>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Brand</th>
                                    <th scope="col">SRP</th>
                                    <th scope="col">Buying Price</th>
                                    <th scope="col">QTY On Hand</th>
                                    <th scope="col">Reorder Point</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>
                                        <input type="text" class="form-control-file" id="add_product_name">
                                    </th>
                                    <th>
                                        <input type="text" class="form-control-file" id="add_brand">
                                    </th>
                                    <th>
                                        <input type="number" class="form-control-file" id="add_selling_price">
                                    </th>
                                    <th>
                                        <input type="number" class="form-control-file" id="add_buying_price">
                                    </th>
                                    <th>
                                        <input type="number" class="form-control-file" id="add_quantity">
                                    </th>
                                    <th>
                                        <input type="number" class="form-control-file" id="add_reorder_point">
                                    </th>
                                </tr>
                            </tbody>
                        </table>
                        <button type="button" class="btn btn-light float-right" id="add_product_button">Add</button>
                        <button type="button" class="btn btn-light float-right mr-3" data-dismiss="modal" id="close_add_modal">Cancel</button>
                    </form>
                
                    
                </div>

                <div class="modal-footer bg-secondary border-0"></div>
            </div>
        </div>
    </div>

     <!-- inventory view edit product pop-up -->
     <div class="modal fade" id="edit_modal" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">

                <div class="modal-header bg-secondary border-0"></div>
                
                <div class="modal-body bg-secondary">
                     
                    <table class="table table-bordered text-center bg-light" id="edit_product_table">

                        <thead>
                            <tr>
                                <th colspan="7" class="h2">Edit Product</th>
                            </tr>
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Brand</th>
                                <th scope="col">SRP</th>
                                <th scope="col">QTY On Hand</th>
                                <th scope="col">Reorder Point</th>
                            </tr>
                            
                        </thead>
                        <tbody>
                            <tr>
                                <th>
                                    <input type="text" class="form-control" id="edit_product_name">
                                </th>
                                <th>
                                    <input type="text" class="form-control" id="edit_brand">
                                </th>
                                <th>
                                    <input type="number" class="form-control" id="edit_price">
                                </th>
                                <th>
                                    <input type="number" class="form-control" id="edit_quantity">
                                </th>
                                <th>
                                    <input type="number" class="form-control" id="edit_reorder_point">
                                </th>
                            </tr>
                        
                        </tbody>
            
                    </table>
                    
                    <button type="button" class="btn btn-light float-right" id="edit_product_button">Edit</button>
                    <button type="button" class="btn btn-light float-right mr-3" data-dismiss="modal" id="close_edit_modal">Cancel</button>
                    
                </div>

                <div class="modal-footer bg-secondary border-0"></div>
            </div>
        </div>
    </div>

     <!-- inventory view delete product pop-up -->
     <div class="modal fade" id="delete_modal" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">

                <div class="modal-header bg-secondary border-0"></div>
                
                <div class="modal-body bg-secondary">
                     
                    <table class="table table-bordered text-center bg-light" id="delete_product_table">

                        <thead>
                            <tr>
                                <th colspan="7" class="h2">Edit Product</th>
                            </tr>
                            <tr>
                                <th scope="col">Product ID</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Brand</th>
                                <th scope="col">SRP</th>
                                <th scope="col">QTY On Hand</th>
                                <th scope="col">Reorder Point</th>
                            </tr>
                            
                        </thead>
                        <tbody>
                            <tr>
                                <th>
                                    <input type="number" class="form-control" id="delete_product_id" value="10">
                                </th>
                                <th>
                                    <input type="text" class="form-control" id="delete_product_name">
                                </th>
                                <th>
                                    <input type="text" class="form-control" id="delete_brand">
                                </th>
                                <th>
                                    <input type="number" class="form-control" id="delete_price">
                                </th>
                                <th>
                                    <input type="number" class="form-control" id="delete_quantity">
                                </th>
                                <th>
                                    <input type="number" class="form-control" id="delete_reorder_point">
                                </th>
                            </tr>
                        
                        </tbody>
            
                    </table>
                    
                    <button type="button" class="btn btn-light float-right" id="edit_product_button">Edit</button>
                    <button type="button" class="btn btn-light float-right mr-3" data-dismiss="modal" id="close_edit_modal">Cancel</button>
                    
                </div>

                <div class="modal-footer bg-secondary border-0"></div>
            </div>
        </div>
    </div>
    
    <script src="/script/inventory-view.js"></script>
</body>
</html>